
  <div class="container">
    <div class="row space">
<!--left col-->
      <div class="col-md-3">   
        <h1 class="text-center"><%= @user.name %></h1>
          <% if @user.avatar.url.present? %>
            <%= image_tag(@user.avatar.url, width:"240px", alt: "Third slide", class: "d-block w-100")%>
          <% else %>
            <%= image_tag("https://via.placeholder.com/200x230", width:"240px", alt: "Third slide", class: "d-block w-100") %>
          <% end %>
<!-- left profile -->
          <ul class="list-group panel panel-default">
            <li class="list-group-item text-center panel-heading">Profile</li>
            <li class="list-group-item"><strong>Email:</strong>
              <p><%= @user.email %></p>
            </li>
            <li class="list-group-item"><strong>Location:</strong>
              <% if @user.location != nil %>
                <p class="text-sm-left"><%= @user.location %></p>
              <% else %>
                <p class="text-muted">No location set yet</p>
              <% end %>
            </li>
            <li class="list-group-item"><strong>Introduction:</strong>
              <% if @user.introduction != nil %>
                <p class="text-sm-left"><%= @user.introduction %></p>
              <% else %>
                <p class="text-muted">No introduction yet</p>
              <% end %>
            </li>
          </ul> 
<!-- left interest -->
          <ul class="list-group panel panel-default">
            <li class="list-group-item text-center panel-heading">Interests</li>
            <% @labels.each do |label| %>
              <li class="list-group-item"><%= label.name %></li>
            <% end %>
          </ul>
<!-- update profile button -->
        <%= button_to("Edit", edit_user_path(@user), :method => :get, :class => "btn btn-primary") %>
      </div><!--/col-md-3-->     
<!-- right all info -->
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="tabbable-panel">
              <div class="tabbable-line">
                <ul class="nav nav-tabs ">
                  <li class="active">
                    <a href="#tab_default_1" data-toggle="tab">Join</a>
                  </li>
                  <li>
                    <a href="#tab_default_2" data-toggle="tab">Group</a>
                  </li>
                  <li>
                    <a href="#tab_default_3" data-toggle="tab">Going</a>
                  </li>
                  <li>
                    <a href="#tab_default_4" data-toggle="tab">Event</a>
                  </li>
                </ul>
                <div class="tab-content">
                  <div class="tab-pane active" id="tab_default_1">
                    <%= render partial: "shared/users/user_join" %>
                  </div>
                  <div class="tab-pane" id="tab_default_2">
                    <%= render partial: "shared/users/user_group" %>
                  </div>
                  <div class="tab-pane" id="tab_default_3">
                    <%= render partial: "shared/users/user_going" %>
                  </div>
                     <div class="tab-pane" id="tab_default_4">
                    <%= render partial: "shared/users/user_event" %>
                  </div>
                </div><!-- tab-content -->
              </div><!-- tabbable-line -->
            </div><!-- tabbable-panel -->
          </div><!-- col-md-9 -->
        </div><!-- row -->
      </div><!-- container -->
<!-- right end -->
    </div><!--row-->
  </div><!--container-->

<div class="container" style="padding: 20px 0 30px 0;">
  <div class="row">
    <h1 class="page-header">Edit Profile</h1>
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <%= form_for @user do |f| %>
          <% if @user.avatar.url.present? %>
            <%= image_tag(@user.avatar.url, width: '240px') %>
          <% else %>
            <img src="https://via.placeholder.com/200x200" class="avatar img-circle img-thumbnail" alt="avatar">
          <% end %>
          <%= f.file_field :avatar, class: "text-center center-block well well-sm" %>
          <%= f.submit "Update your photo" %>
        <% end %>
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <h3>Personal info (new)</h3>
        <form class="form-horizontal" role="form">
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :name, "Name:", class:"col-lg-3 control-label" %>
              <div class="col-lg-8">
                  <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :location, "Location:", class:"col-lg-3 control-label" %>
              <div class="col-lg-8">
                  <%= f.text_field :location, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-lg-8">
                <%= f.submit "Save Changes", class: "btn btn-primary" %>
                <%= link_to "Cancel", user_path(@user), class: "btn btn-default", data: { confirm: "You sure?" } %>
              </div>
            </div>
          <% end %>
        </form>
    </div>
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <h3>Personal info</h3>
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <input class="form-control" value="" type="text">
            </div>
          </div>
          <!-- email只顯示不能更改 -->
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input class="form-control" value="" type="text">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Location:</label>
            <div class="col-lg-8">
              <input class="form-control" value="" type="text">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Introduction:</label>
            <div class="col-lg-8">
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>    
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>
            <div class="col-md-8">
              <input class="form-control" value="" type="password">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Confirm password:</label>
            <div class="col-md-8">
              <input class="form-control" value="" type="password">
            </div>
          </div>
           <div class="form-group">
            <label class="col-lg-3 control-label">Interest:</label>
            <div class="col-lg-8">
              <select id="selectbasic" name="selectbasic" class="input-xlarge">
                <option>Taipei</option>
                <option>Hsinchu</option>
                <option>Kaohsiung</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input class="btn btn-primary" value="Save Changes" type="button">
              <span></span>
              <input class="btn btn-default" value="Cancel" type="reset">
            </div>
          </div>
        </form>
    </div>
  </div>
</div>
<!-- footer -->
<%= render 'layouts/footer' %>